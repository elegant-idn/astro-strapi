---
import Layout from "../layouts/Layout.astro";

---

<Layout title="Вход">
    <div class="enter">
        <h1>Вход</h1>

        <form id="enter-form">
            <input name="login" type="text" placeholder="Логин/Email" />
            <input name="password" type="password" placeholder="Пароль" />
            <button type="submit">Вход</button>
        </form>
        <script is:inline type="module" src='scripts/enter.js'></script>
    </div>
</Layout>
<style>
    .enter{
        align-items: center;
        display: flex;
        flex-direction: column;
        background-color: #93dfc6;
        min-height: 400px;
        border-radius: 20px;
    }
    #enter-form{
        margin-top: 40px;
        width: 50%;
        display: flex;
        flex-direction: column;
    }
    #enter-form input,button{
        transition: 0.5s;
        text-align: center;
        border: 1px solid #93dfc6;
        height: 30px;
        font-size: 15px;
        border-radius: 15px;
        margin: 10px 0;
        
    }
    #enter-form button:hover{
        background-color: rgb(192, 183, 183);
    }
</style>
